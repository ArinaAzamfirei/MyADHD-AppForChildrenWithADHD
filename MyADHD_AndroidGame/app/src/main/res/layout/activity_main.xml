<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat = "@drawable/title"
        android:contentDescription="@string/game_name"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/childCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="260sp"
        android:layout_marginEnd="260sp"
        android:layout_marginBottom="10sp"
        android:background="#80ffffff"
        android:hint="IntroduceÈ›i codul"
        android:layout_gravity="center"
        android:drawablePadding="20sp"
        android:padding="10sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textColorHint="@color/black" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:id="@+id/ibStartGame"
        android:background="@drawable/play_now"
        android:contentDescription="@string/play"
    />
</LinearLayout>