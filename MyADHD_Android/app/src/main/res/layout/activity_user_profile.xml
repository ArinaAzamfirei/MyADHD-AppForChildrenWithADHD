<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".myadhd.Activities.UserProfileActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#80000000"
        android:gravity="center"
        android:onClick="logOut"
        android:layout_marginStart="10dp"
        android:scaleType="fitCenter"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/controlpanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#80000000"
        android:layout_marginStart="120dp"
        android:gravity="center"
        android:onClick="controlPanel"
        android:scaleType="fitCenter"
        android:text="@string/panou_de_contrl"
        android:textColor="@color/white"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_below="@+id/controlpanel"
        android:layout_marginStart="150dp"
        android:layout_marginTop="100dp"
        android:maxWidth="120dp"
        android:maxHeight="200dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/user"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="148dp" />

    <TextView
        android:id="@+id/firstnameLastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="40dp"
        android:background="#80ffffff"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="@string/nume_prenume"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="316dp" />


    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80ffffff"
        android:fontFamily="@font/lato"
        android:layout_marginTop="40dp"
        android:layout_below="@id/firstnameLastname"
        android:gravity="center"
        android:text="@string/adresa_de_email"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="411dp" />

